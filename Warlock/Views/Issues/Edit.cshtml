@model Warlock.Models.Issue

@{
    ViewBag.Title = "Edit";
}

<style>
    input[type="text"] {
        width: 300px;
    }
</style>



<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Issues", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Issue</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.SeriesId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Number)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Number)
            @Html.ValidationMessageFor(model => model.Number)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SaleDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SaleDate)
            @Html.ValidationMessageFor(model => model.SaleDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ImageUrl)
            @Html.ValidationMessageFor(model => model.ImageUrl)
        </div>

        <div class="editor-label">
            <label>Image Upload</label>
        </div>
        <div class="editor-field">
            <input type="file" id="ImageUpload" name="ImageUpload" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Writer)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Writer)
            @Html.ValidationMessageFor(model => model.Writer)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Artist)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Artist)
            @Html.ValidationMessageFor(model => model.Artist)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Colorist)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Colorist)
            @Html.ValidationMessageFor(model => model.Colorist)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Letterist)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Letterist)
            @Html.ValidationMessageFor(model => model.Letterist)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Owned)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Owned)
            @Html.ValidationMessageFor(model => model.Owned)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
